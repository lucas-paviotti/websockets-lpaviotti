<div class="container">
    <div class="row">
        <div class="col-12">
            {{#if listaProductos.length}}
                <div class="wrapper">
                    <table class="table table-hover tablaproductos">
                        <thead>
                            <tr>
                                <th scope="col">Producto</th>
                                <th  class="text-center" scope="col">Precio</th>
                                <th  class="text-center" scope="col">Imagen</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each listaProductos}}
                            <tr>
                                <td valign="middle">{{this.title}}</td>
                                <td valign="middle" class="text-center">{{this.price}}</td>
                                <td valign="middle" class="text-center"><img src="{{this.thumbnail}}" alt="{{this.title}}" class="tablaproductos__image"></td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
                {{else}}
                <div class="wrapper text-center">
                    <h2>No hay productos</h2>
                </div>
            {{/if}}
        </div>
    </div>
</div>